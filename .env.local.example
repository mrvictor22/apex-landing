# Email Configuration
# Resend API Key (preferred email provider)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Email addresses
CONTACT_TO_EMAIL=contacto@apexcodelabs.com
CONTACT_FROM_EMAIL=no-reply@apexcodelabs.com

# SMTP Fallback (optional - if Resend is not available)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# N8N Webhook Integration (optional)
# URL for triggering WhatsApp flows or other automations
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/contact-form

# WhatsApp Configuration
# Phone number in international format (without + sign)
NEXT_PUBLIC_WA_NUMBER=503XXXXXXXX
# Pre-filled message for WhatsApp
NEXT_PUBLIC_WA_MSG=Hola Apex Code Labs, quiero informaci√≥n.

# Analytics (optional)
# Plausible Analytics domain
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=apexcodelabs.com

# Environment
NODE_ENV=production
